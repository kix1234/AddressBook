{% extends 'base.html.twig' %}

{% block body %}

    <a href="{{ path('new_group') }}" class="btn-sm btn-primary">New Group</a><br><br>

    <table class="table table-hover">
        <tr>
            <th>Group Name</th>
            <th>Favorite Group</th>
            <th>Members</th>
            <th></th>
        </tr>

        {% for group in groups %}
            <tr>
                <td>
                    {{ group.name }}
                </td>
                <td>
                    {{ group.isFavorite|default('No')|replace({'1':'Yes'}) }}
                </td>
                <td>
                    {{ group.contacts|length }}
                </td>
                <td>
                    <a href="{{path('details_group',{'id': group.id})}}" class="btn-sm btn-success">Detais</a>
                    <a href="{{path('edit_group',{'id': group.id})}}" class="btn-sm btn-warning">Edit</a>
                    <a href="{{ path('delete_group',{'id': group.id}) }}" class="btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}


