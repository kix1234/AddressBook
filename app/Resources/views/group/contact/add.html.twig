{% extends 'base.html.twig' %}

{% block body %}
    <h3>Add Contact to Group</h3><br>

    <p>
        <b>Group Name</b>: <a href="{{path('details_group',{'id': group.id})}}" >{{ group.name }}</a>
        {{ group.isFavorite|replace({'1':', Favorite'}) }}
    </p>
    <br>

    {{ form_start(form) }}
    <table class="table table-hover">
        <tr>
            <th>Contact Name</th>
            <th>Default Number</th>
            <th>Favorite Number</th>
            <th>#</th>
        </tr>

        {% for contact in contacts  %}
            <tr>
                <td>{{ contact.firstName }} {{ contact.lastName }}</td>
                <td>{{ contact.defaultNumber }}</td>
                <td>{{ contact.isFavorite|default('No')|replace({'1':'Yes'}) }}</td>
                <td><input type="checkbox" value="{{ contact.id }}" name="cb[]"></td>
            </tr>
        {% endfor %}
    </table>
    <input type="submit" value="Add to Group" class="btn-xs btn-success" />
    {{ form_end(form) }}

{% endblock %}